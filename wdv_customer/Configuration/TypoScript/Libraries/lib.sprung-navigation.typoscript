temp.uid = TEXT
temp.uid {
     field = uid
}

lib.sprung-navigation = COA
lib.sprung-navigation {
     desktop = COA
     desktop {
          wrap = <div class="collapse navbar-collapse">|</div>

          10 = CONTENT
          10 {
               wrap = <ul class="nav first-level mr-auto ml-auto d-print-none" id="main-navigation">|</ul>

               table = tt_content
               select {
                    pidInList = this
                    orderBy = sorting

                    where = colPos=0
                    andWhere = deleted=0
                    andWhere = hidden=0

                    languageField = sys_language_uid
               }
               renderObj = COA
               renderObj {
                    10 = TEXT
                    10.value = <a href="#

                    20 = TEXT
                    20 < temp.sectionname

                    30 = TEXT
                    30.value = " alt="" title="">

                    40 = TEXT
                    40.dataWrap = {field:header}
                    40.insertData = 1

                    50 = TEXT
                    50.value = </a>

                    # if.isTrue.field = header

                    isTrue.cObject = COA
                    isTrue.cObject {

                         10 = TEXT
                         10.field = header

                         20 = TEXT
                         20.field = tx_gridelements_backend_layout
                    }
                    wrap = <li>|</li>
               }
          }
          20 < lib.main-navigation.desktop.20
     }
     mobile < lib.main-navigation.mobile
     mobile {
          wrap = <div class="collapse navbar-collapse">|</div>

          40 >
          40 < lib.sprung-navigation.desktop.10
     }
}

