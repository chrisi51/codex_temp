[site("identifier") == "familie_vigo_de"]
    lib.breadcrumb = FLUIDTEMPLATE
    lib.breadcrumb {
        file = EXT:wdv_customer/Resources/Private/Partials/Page/Breadcrumb/Breadcrumb.html
        extbase.controllerExtensionName = wdv_customer
        dataProcessing {
            10 = TYPO3\CMS\Frontend\DataProcessing\MenuProcessor
            10 {
                special = rootline
                special.range = 0|-1
                includeNotInMenu = 0
                titleField = title
                as = menu
            }
