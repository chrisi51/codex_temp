lib.breadcrumb = COA
lib.breadcrumb {

    wrap = <nav aria-label="breadcrumb"><ol class="breadcrumb">|</ol></nav>

    20 = HMENU
    20 {
        special = rootline
        special.range = 3|-1

        1 = TMENU
        1 {
            NO {
                allWrap = <li class="breadcrumb-item">|</li>
                ATagTitle.field = abstract // description // title
            }

            CUR = 1
            CUR {
                allWrap = <li class="breadcrumb-item active" aria-current="page">|</li>
                doNotLinkIt = 1
            }
        }
    }

