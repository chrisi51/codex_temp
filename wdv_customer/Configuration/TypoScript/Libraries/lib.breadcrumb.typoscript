[site("identifier") == "www_gib8-achtsamkeit_de"]
    lib.breadcrumb.20.special.range = 1|-2
    lib.breadcrumb.20.1.NO.stdWrap.cObject = COA
    lib.breadcrumb.20.1.NO.stdWrap.cObject {
        10 = TEXT
        10.field = title
        10.stdWrap.htmlSpecialChars = 1
    }
[global]

