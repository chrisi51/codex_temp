page.includeCSS {

    # kesp-jquery-ui = EXT:ke_search_premium/Resources/Public/Media/jquery-ui-1.9.0.custom.min.css
    kesp-jquery-ui >

    110 = EXT:wdv_customer/Resources/Public/CSS/jquery-ui.css
}

# remove javascript librariers from beeing included in page.includeJS
page.includeJS {

    kesp-jquery >
    kesp-jquery-ui-core >
    kesp-jquery-ui-widget >
    kesp-jquery-ui-pos >
    kesp-jquery-ui-menu >
    kesp-jquery-ui-auto >
}

# move kesp object from above from page.includeJS to page.includeJSFooterlibs except jquery!
# we dont need jquery in this call because it is already present
page.includeJSFooterlibs {

    100 = EXT:wdv_customer/Resources/Public/JavaScript/jquery-ui.js
}

